<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message%>
  <% end %>
<% end %>
<div class="container mt-3">
  <div class="row">
    <%=render 'books/list', user: @user, book: @book%>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <%@books.each do |book|%>
          <tr>
            <th>
              <%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
              <%end%>
              <%= link_to book.user.name, user_path(book.user)%>
            </th>
            <th><%= link_to book.title, book_path(book.id)%></th>
            <th><%=book.body%></th>
          </tr>
        <%end%>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>