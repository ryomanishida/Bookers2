<div class="container mt-3">
  <div class="row">
    <%=render 'books/list', user: @user, book: @newbook%>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tr>
          <th>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %>
            <%end%>
            <%= link_to @user.name, user_path(@user)%>
          </th>
          <th><%= link_to @book.title, book_path(@book)%></th>
          <th><%=@book.body%></th>
          <%if @book.user == current_user%>
            <th><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success" %></th>
            <th><%= link_to 'Destroy', book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></th>
          <%end%>
        </tr>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>