<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-10 mt-5 mx-auto">
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生しました
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>

        <h2>Editing Book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <div class="col pt-4">
            <h6>Title</h6>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="col py-4">
            <h6>Option</h6>
            <%= f.text_area :body, class: "form-control" %>
          </div>

          <div class="col pb-4">
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>
        <% end %>
        <div class="col">
          <%=link_to 'Show',book_path(@book.id)%>|<%=link_to 'Back',books_path %>
        </div>
      </div>
    </div>
  </div>
</main>