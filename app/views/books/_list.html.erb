<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tr>
      <th>name</th>
      <th class="profile-name"><%= user.name%></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th class="profile-introduction"><%= user.introduction%></th>
    </tr>
  </table>
  <div class="row">
    <%= link_to  '', edit_user_path(user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
  </div>

  <div class="row">
    <a class="btn"></a>
  </div>
  <h2>
    New book
  </h2>
  <%= form_with model: book, local:true do |f| %>
    <h6>Title</h6>
    <%= f.text_field :title %>
    <h6>Option</h6>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book', class: "btn btn-success"%>
  <% end %>
</div>
