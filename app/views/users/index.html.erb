<div class="container mt-3">
  <div class="row">
    <%=render 'books/list', user: @user, book: @book%>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <%@users.each do |user|%>
          <tr>
            <th><%= attachment_image_tag user, :profile_image, :fill, 35, 35, format: 'jpeg', fallback: "no_image.jpg", size: '60x60' %></th>
            <th><%= user.name%></th>
            <th><%= link_to 'Show',user_path(user.id) %></th>
          </tr>
        <%end%>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>
</div>

